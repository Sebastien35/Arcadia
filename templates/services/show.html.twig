{% extends 'base.html.twig' %}

{% block title %}{{service.nom}}{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{asset('css/services.css')}}">
<div class="page-container">
    <nav class="navbar-expand-lg navbar-dark bg-dark mt-5">
        <a href="{{path('app_services_index_')}}" class="px-3">Retour</a>
    </nav>
    <div class="show-service-container ">
        <img src="{{asset('images/service/' ~ service.imageName)}}" alt="{{service.nom}}" class="img-fluid show-service-image">
        <div class="service-description centered show-service-card card">
            <h1 class="text-center">{{service.nom}}</h1>
            <p class="text-center">{{service.description}}</p>
        </div>
    </div>







</div>






{% endblock %}