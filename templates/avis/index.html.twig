{% extends 'base.html.twig' %}

{% block title %}Hello AvisController!{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/avis.css') }}">

<div class="container avis-list-container">
    <div class="row">
        <h1 class="text-center">Avis</h1>
        <div class="col-12 avis-scroll-container" style="max-height: 400px; overflow-y: auto;">
            <div id="avisList">
                {% for singleAvis in avisList %}
                    {% if singleAvis.isValidation == true %}
                    <div class="card">
                        <div class="stars card-title">
                            {% for star in range(1, 5) %}
                                {% if star <= singleAvis.note %}
                                    <i class="fa-solid fa-star"></i>
                                {% else %}
                                    <i class="fa-regular fa-star"></i>
                                {% endif %}
                            
                            {% endfor %}
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ singleAvis.getAvisContent }}</p>
                            <p class="card-text"><small class="text-muted">Post√© par {{ singleAvis.pseudo }} le {{ singleAvis.getCreatedAt|date('d/m/Y') }}</small></p>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
</div>
    </br></br>
    <div class="col-12 avis-form-container mt-5 mb-5">
        <form action="/avis/create" method="POST">
            <div class="mb-3">
                <label for="pseudo" class="form-label">Entrez un nom:</label>
                <input type="text" name="pseudo" class="form-control" placeholder="Pseudo" required>
            </div>
    
            <div class="mb-3">
                <label for="note" class="form-label">Notez le parc:</label>
                <input type="number" name="note" class="form-control" min="0" max="5" required>
            </div>
    
            <div class="mb-3">
                <label for="Avis_content" class="form-label">Entrez votre avis:</label>
                <textarea name="Avis_content" class="form-control" placeholder="Avis" rows="5" required></textarea>
            </div>
            
            <div class="mb-5">
            <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>



{% endblock %}
