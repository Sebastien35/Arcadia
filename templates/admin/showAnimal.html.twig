{% extends 'base.html.twig' %}

{% block title %}{{animal.prenom}}{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/veterinaire.css') }}">
<link rel="stylesheet" href="{{ asset('css/repas.css') }}">
<link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">


<div class="navbar bg-dark mt-5  d-none d-lg-block">
    <H2><a class="nav-item d-none d-lg-block" href="{{ path('app_admin_index') }}">Retour</a></H2>
    <H2 class="nav-item d-none d-lg-block infoBtn" role="button" aria-label="Informations animal"> Information sur l'animal</H2>
    <H2 class="nav-item d-none d-lg-block imageBtn" role="button" aria-label="Gallerie photos">Gallerie photo</H2>
</div>
<div class="navbar bg-dark mt-5 d-flex justify-content-around d-lg-none">
    <H2><a class="nav-item d-lg-none" href="{{ path('app_admin_index') }}"><i class="fa-solid fa-arrow-left"></i></a></H2>
    <H2><a class="nav-item d-lg-none infoBtn" role="button" aria-label="Informations animal"><i class="fa-regular fa-clipboard"></i></a></H2>
    <H2><a class="nav-item d-lg-none imageBtn" role="button" aria-label="Gallerie photos"><i class="fa-regular fa-image"></i></a></H2>
</div>
<div id="infoContainer">
    <div class="row">
        <div class="col-lg-6 col-sm-12 col-md-12">
            <div class="mt-1 mb-2">
                <div class="card">
                    <div class="card-header">
                        <h1>{{animal.prenom}}</h1>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-6"> 
                            {% if animal.imageName == null %}
                                <img src="{{ asset('images/parc/default.jpg') }}" alt="image_{{ animal.getPrenom }}" style="max-width: 100%;" >
                            {% else %}
                            <img src="{{ asset('images/animal/' ~ animal.imageName) }}" alt="image_{{ animal.getPrenom }}" style="max-width: 100%; height:100%" >
                            {% endif %}
                        </div>
                        <div class="col-lg-8 col-sm-6">
                            <div class="card-body">
                                {% if animal.habitat is not null %}
                                <p class="card-text">Habitat: {{animal.habitat.nom}} </p>
                                {% else %}
                                <p class="card-text">L'habitat de cet animal est introuvable. Il a peut-être été supprimé.</p>
                                {% endif %}
                                <p class="card-text">Race: {{animal.race}}</p>
                                <p class="card-text">Date d'arrivée: {{animal.createdAt | date('d-m-Y')}}</p>      
                            </div>
                        </div>
                    </div>  
                </div>
            </div>
        </div>
        <div class="col col-lg-6 col-sm-12 col-md-12">
            <div class="mt-1 card mb-2">
                <div class="card-header">
                    <h2>Notes vétérinaires:</h2>
                </div>
                <div class="card-body" style="overflow-y: scroll; height: 30vh">                  
                    <table class="table table-striped">
                        <label for="date">Trier par date</label>
                        <select id="infoAnimalDateInput" class="form-select">
                            <option value="" disabled selected>Choisir une option</option>"
                            <option value="0">Tous</option>
                            <option value="1">Aujourd'hui</option>
                            <option value="2">Cette semaine</option>
                            <option value="3">Ce mois</option>
                        </select>
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Etat de l'animal</th>
                                <th class="d-none d-lg-table-cell">Details</th>
                                <th class="d-none d-lg-table-cell">Nourriture</th>
                                <th class="d-none d-lg-table-cell">Quantité recommandé</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if infoAnimals == null %}
                            <tr>
                                <td colspan="5">Pas de notes enregistrées</td>
                            </tr>
                            {% else %}
                            {% for infoAnimal in infoAnimals %}
                            <tr class="infoAnimal">
                                <td class="infoAnimalDate">{{ infoAnimal.createdAt | date('Y-m-d') }}</td>
                                <td>{{ infoAnimal.etat }}</td>
                                <td class="d-none d-lg-table-cell">{{ infoAnimal.details }}</td>
                                <td class="d-none d-lg-table-cell">{{ infoAnimal.nourriture.nom }}</td>
                                <td class="d-none d-lg-table-cell">{{ infoAnimal.grammage }}g</td>
                            </tr>
                            {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
                </div>
                
            </div>

        </div>
    </div>

        
    <div class="card mb-5" id="animalMealCard">
        <div class="card-header">
            <h2>Repas</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped" aria-labelledby="Repas de l'animal">
                <label for="date">Trier par date</label>
                <select  class="form-select dateInput">
                    <option value="" disabled selected>Choisir une option</option>"
                    <option value="0">Tous les repas</option>
                    <option value="1">Aujourd'hui</option>
                    <option value="2">Cette semaine</option>
                    <option value="3">Ce mois</option>
                </select>
                <thead>
                    <tr>
                        <th role="button" id="dateBtn"></i> Date</th>
                        <th>Quantité</th>
                        <th>Aliment</th>
                    </tr>
                </thead>
                <div class="scrollable mb-1">
                    <tbody class="mb-5">
                        {% if repas == null %}
                        <tr>
                            <td colspan="3">Pas de repas enregistré</td>
                        </tr>
                        {% else %}
                            {% for repas in repas %}                    
                                <tr class="d-none repas">
                                    <td class="repasdate">{{ repas.Datetime | date('Y-m-d') }}</td>
                                    <td>{{ repas.quantite }}g</td>
                                    <td>{{ repas.nourriture.nom }}</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </div>
            </table>
        </div>
    </div>
</div>


{# image container #}
{% for flashMessage in app.flashes('success') %}
<div class="alert alert-success" role="alert">
    {{ flashMessage }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{% endfor %}

{% for flashMessage in app.flashes('error') %}
<div class="alert alert-danger" role="alert">
    {{ flashMessage }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{% endfor %}


<div id="imageContainer" class="d-none">
    <div class="container-header d-flex">
        <div class="container-header-title">
            <p>Images</p>
        </div>
        <div class="container-header-button">
            <button class="header-btn" id="add-animal-btn"><i class="fa-solid fa-plus" data-bs-toggle="modal" data-bs-target="#add-image-modal"></i></button>
        </div>
    </div>  
    <div class="container-body">
        <div class="row" id="imageList">
            {% for image in animalImages %}
            <div class="col-lg-4 col-md-12 col-sm-12">
                <div class="card">
                    <img src="{{ asset('images/additionnal_images/' ~ image.imageName) }}" class="card-img-top" alt="image_{{ animal.getPrenom }}">
                    <div class="card-body d-flex justify-content-around">
                        <p class="card-text">{{ image.createdAt | date('d-m-Y') }}</p>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle w-100" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><p class="deleteImage" id="toggleDeleteImage" data-image-id="{{ image.id }}" data-bs-toggle="modal" data-bs-target="#deleteImageModal">Supprimer</p></li>
                            </ul>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

</div>

<div class="modal modal-fade" id="add-image-modal" tabindex="-1" aria-labelledby="add-image-modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter une image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p> .WEBP Uniquement!</p>
                {{ form_start(form) }}
                {{ form_errors(form)}}
                {{ form_row(form.imageFile) }}
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Ajouter</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<div class="modal modal-fade" tabindex="-1" id="deleteImageModal" aria-labelledby="deleteImageModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Supprimer l'image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer cette image?</p>
                <input type="hidden" id="imageId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" id="confirm-delete-image-btn">Supprimer</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}


<script src="{{ asset('js/showAnimal.js') }}"></script>
<input type="hidden" id="animalId" value="{{ animal.id }}">
{% endblock %}