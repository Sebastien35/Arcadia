{% extends 'base.html.twig' %}

{% block title %}Arcadia admin{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{asset('css/admin.css')}}"/>
<div class="container-fluid mt-5 mb-5 bg-dark-box ">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5 mb-3">
            <div class="card card-createHabitat">
                <div class="card-header">
                    <h3>Ajouter un habitat</h3>
                </div>
                <div class="card-body">
                {{ form_start(createForm, {'action':('/admin/habitats/create')}) }}
                {{ form_errors(createForm)}}
                <div class="mb-3">
                    {{ form_label(createForm.nom) }}</br>
                    {{ form_widget(createForm.nom) }}
                </div>
                <div class="mb-3">
                    {{ form_label(createForm.description) }}</br>
                    {{ form_widget(createForm.description) }}
                </div>
                <div class="mb-3">
                    {{ form_row(createForm.imageFile, {'label': 'Image'}) }}
                </div>
                
                <button type="submit" class="btn btn-primary mb-2">Ajouter</button>
                {{ form_end(createForm) }}
            </div>
        </div>
    </div>
</div>
</div>
<div class="container-fluid mt-5 white-container">
    <hr>
    <h2 class="text-center">Liste des habitats</h2>
    <hr>
    <div class="row">
        {% for habitat in habitats %}  
            <div class="col-md-3 mt-3">
                <div class="card mb-3 card-habitat">
                    <div class="card-body">
                        <h5 class="card-title">{{ habitat.nom }}</h5>
                        <img src="{{ asset('images/habitat/' ~ habitat.ImageName) }}" alt="image_{{ habitat.getNom }}" style="max-width: 100%;" >
                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#deleteModal" data-habitat-id = "{{habitat.id}}" ><i class="fa-solid fa-trash"></i></button>
                            <button class="btn btn-light" onclick="window.location='/admin/habitats/update/{{habitat.id}}'">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
        {% endfor %}
    </div>

    

</div>


<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Suppression d'un habitat</h5>
                <button id = "delete" type="button" class="btn-close btn btn-danger" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-x"></i></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer cet habitat?</p>
                <p class="d-none" id="habitatId"></p>
                
            </div>
            <div class="d-flex justify-content-around p-3">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button id="btnConfirmDelete" type="button" class="btn btn-danger" data-bs-dismiss="modal">Supprimer</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Modification d'un habitat</h5>
                <button type="button" class="btn-close btn btn-danger" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-x"></i></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <label for="nom">Nom</label>
                    <input type="text" id="nom" name="nom" class="form-control">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" class="form-control"></textarea>
                    <label for="image">Image</label>
                    <input type="file" id="fileInput" name="image" class="form-control">
                    <input type="hidden" id="habitatId" name="habitatId">  
                    <button type="button" class="btn btn-primary mt-2 mb-2" id="btnConfirmEdit" >Modifier</button>
                    <button type="button" class="btn btn-secondary mt-2 mb-2" data-bs-dismiss="modal">Annuler</button>
                </form>
            </div>
            
        </div>
    </div>
</div>






<script src="{{asset('js/habitat.js')}}"></script>
{% endblock %}
