{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

<link rel="stylesheet" href="{{asset('css/admin.css')}}"/>

<div class="container-fluid mt-5 white-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Créer un nouveau service</h1>
                    <form action="/services/create" method="post">
                        <input type="hidden" name="_method" value="POST" />
                        <label for="nom">Service Name:</label>
                        <input type="text" id="nom" name="nom" required class="form-control mb-2">
                        
                        <label for="description">Description:</label>
                        <textarea id="description" name="description" required class="form-control mb-2"></textarea>
                        
                        <label for="prix">Price:</label>
                        <input type="number" id="prix" name="prix" class="form-control mb-3">
                        
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Add Service</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid  bg-dark-box">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Modifier un service:</h1>
                    <form>
                        <select name="service" id="service" class="form-control mb-2">
                            {% for service in services %}
                                <option value="{{ service.id }}">{{ service.nom }}</option>
                            {% endfor %}
                        </select>
                        <label for="nom">Nouveau nom du service:</label>
                        <input type="text" id="Edit_nom" name="nom" required class="form-control mb-2" placeholder="">
                        
                        <label for="description">Description:</label>
                        <textarea id="Edit_description" name="Edit_description" required class="form-control mb-2" placeholder=""></textarea>
                        <label for="prix">Price:</label>
                        <input type="number" id="Edit_prix" name="Edit_prix" class="form-control mb-3" placeholder="">
                        
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-primary UpdateBtn">Update Service</button>
                        </div>
                        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                        <script>
                            $(document).ready(function() {
                                // Event listener for change in the select element
                                $('#service').change(function() {
                                    // Get the selected option's text and values
                                    var selectedOptionText = $(this).find('option:selected').text();
                                    var selectedOptionValue = $(this).val();
                    
                                    // Update the placeholders of input fields with the selected service information
                                    $('#Edit_nom').attr('placeholder', selectedOptionText);
                                    $('#Edit_description').attr('placeholder', 'Description for ' + selectedOptionText);
                                    $('#Edit_prix').attr('placeholder', 'Price for ' + selectedOptionText);
                                });
                    
                                // Event listener for click on the "Update Service" button
                                $('.UpdateBtn').click(function() {
                                    var serviceId = $('#service').val();
                                    var url = "/services/update/" + serviceId;
                                    // Envoi de la requête AJAX avec la méthode PUT sur l'id du service
                                    $.ajax({
                                        url: url,
                                        type: 'PUT',
                                        data: {
                                            nom: $('#Edit_nom').val(),
                                            description: $('#Edit_description').val(),
                                            prix: $('#Edit_prix').val()
                                        },
                                        // Coder fonction succes et error
                                        success: function(response) {
                                            // Handle success response
                                            alert('Service updated successfully');
                                        },
                                        error: function(xhr, status, error) {
                                            // Handle error response
                                            alert('Error updating service');
                                        }
                                    });
                                });
                            });
                        </script>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid  white-container">
    <H1> Supprimer un service</H1>
    <div class="row justify-content-center">
        {% for service in services %}
        <div class="col-md-2 col-sm-4 mb-4 mt-4 service" data-service="{{ service.nom }}" data-service-id="{{ service.id }}">
            <div class="card card-service">
                <H5 class="card-title">{{ service.nom }}</H5>
                {% if service.prix is not null %}
                    <div class="col-md-2">
                        <button class="btn btn-danger delServ-btn">Delete</button>
                    </div>
                {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).ready(function() {
    $('.delServ-btn').click(function() {
        var serviceId = $(this).closest('.service').data('service-id');
        var url = "/services/delete/" + serviceId;
        // Envoi de la requête AJAX avec la méthode DELETE sur l'id du service
        $.ajax({
            url: url,
            type: 'DELETE',
            // Coder fonction succes et error
            success: function(response) {
                // Handle success response
                alert('Service deleted successfully');
            },
            error: function(xhr, status, error) {
                // Handle error response
            }
        });
    });
});
$(document.ajaxStop(function() {
    window.location.reload();
}));    
</script>

{% endblock %}
